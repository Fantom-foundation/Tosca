    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current File w/ GDB",
            "preLaunchTask": "Build Debug",
            "type": "gdb",
            "request": "launch",
            "target": "${workspaceFolder}/bazel-bin/${relativeFileDirname}/${fileBasenameNoExtension}",
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText"
        }
    ]
}
